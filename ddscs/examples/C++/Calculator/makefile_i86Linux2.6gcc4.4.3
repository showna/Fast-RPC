CPP_i86Linux2.6gcc4.4.3 = g++
CXXFLAGS_i86Linux2.6gcc4.4.3 = -m32 -std=c++11
LD_i86Linux2.6gcc4.4.3 = g++
LDFLAGS_i86Linux2.6gcc4.4.3 = -m32
SYSLIBS_i86Linux2.6gcc4.4.3 = -ldl -lnsl -lm -lpthread -lrt
DEFINES_ARCH_SPECIFIC =  -DRTI_UNIX -DRTI_LINUX

DEFINES = $(DEFINES_ARCH_SPECIFIC)  

INCLUDES = -I.  -I$(NDDSHOME)/include -I$(NDDSHOME)/include/ndds -I$(RPCDDSHOME)/include

LIBS =  -L$(NDDSHOME)/lib/i86Linux2.6gcc4.4.3 -L$(RPCDDSHOME)/lib/i86Linux2.6gcc4.4.3 \
       -lnddsc -lnddscore -lnddscpp -lrpcdds $(SYSLIBS_i86Linux2.6gcc4.4.3)

COMMONCXXSOURCES = CalculatorRequestReply.cxx Calculator.cxx CalculatorRequestReplyPlugin.cxx \
                CalculatorPlugin.cxx CalculatorRequestReplySupport.cxx CalculatorSupport.cxx \
                CalculatorRequestReplyUtils.cxx MessageHeader.cxx MessageHeaderPlugin.cxx \
                MessageHeaderSupport.cxx
COMMONCPPSOURCES =

CLIENTSOURCES = CalculatorProxy.cxx CalculatorClientRPCSupport.cxx CalculatorAsyncSupport.cxx Client.cxx 
SERVERSOURCES = CalculatorServer.cxx CalculatorServerImpl.cxx CalculatorServerRPCSupport.cxx Server.cxx 
DIRECTORIES   = objs.dir objs/i86Linux2.6gcc4.4.3.dir
COMMONOBJS    = $(COMMONCXXSOURCES:%.cxx=objs/i86Linux2.6gcc4.4.3/%.o) $(COMMONCPPSOURCES:%.cpp=objs/i86Linux2.6gcc4.4.3/%.o)
CLIENTOBJS    = $(CLIENTSOURCES:%.cxx=objs/i86Linux2.6gcc4.4.3/%.o)
SERVEROBJS    = $(SERVERSOURCES:%.cxx=objs/i86Linux2.6gcc4.4.3/%.o)
CLIENTEXEC    = objs/i86Linux2.6gcc4.4.3/CalculatorClient
SERVEREXEC    = objs/i86Linux2.6gcc4.4.3/CalculatorServer

client: $(DIRECTORIES) $(COMMONOBJS) $(CLIENTOBJS) $(CLIENTEXEC)
server: $(DIRECTORIES) $(COMMONOBJS) $(SERVEROBJS) $(SERVEREXEC)

$(CLIENTEXEC) : 
	$(LD_i86Linux2.6gcc4.4.3) $(LDFLAGS_i86Linux2.6gcc4.4.3)  -o $(@:%.out=%) $(COMMONOBJS) $(CLIENTOBJS) $(LIBS)

$(SERVEREXEC) : 
	$(LD_i86Linux2.6gcc4.4.3) $(LDFLAGS_i86Linux2.6gcc4.4.3)  -o $(@:%.out=%) $(COMMONOBJS) $(SERVEROBJS) $(LIBS)

objs/i86Linux2.6gcc4.4.3/%.o : %.cxx
	$(CPP_i86Linux2.6gcc4.4.3) $(CXXFLAGS_i86Linux2.6gcc4.4.3)  -o $@ $(DEFINES) $(INCLUDES) -c $<
	
objs/i86Linux2.6gcc4.4.3/%.o : %.cpp
	$(CPP_i86Linux2.6gcc4.4.3) $(CXXFLAGS_i86Linux2.6gcc4.4.3)  -o $@ $(DEFINES) $(INCLUDES) -c $<

# Here is how we create those subdirectories automatically.
%.dir : 
	@echo "Checking directory $*"
	@if [ ! -d $* ]; then \
		echo "Making directory $*"; \
		mkdir -p $* ; \
	fi;
