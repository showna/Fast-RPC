CPP_x64Linux2.6gcc4.5.1 = g++
CXXFLAGS_x64Linux2.6gcc4.5.1 = -m64 -std=c++11
LD_x64Linux2.6gcc4.5.1 = g++
LDFLAGS_x64Linux2.6gcc4.5.1 = -m64
SYSLIBS_x64Linux2.6gcc4.5.1 = -ldl -lnsl -lm -lpthread -lrt
DEFINES_ARCH_SPECIFIC =  -DRTI_UNIX -DRTI_LINUX -DRTI_64BIT


DEFINES = $(DEFINES_ARCH_SPECIFIC)  

INCLUDES = -I.  -I$(NDDSHOME)/include -I$(NDDSHOME)/include/ndds -I$(RPCDDSHOME)/include \
	   -I../../common/rpcdds

LIBS =  -L$(NDDSHOME)/lib/x64Linux2.6gcc4.5.1 -L$(RPCDDSHOME)/lib/x64Linux2.6gcc4.5.1 \
       -lboost_chrono-mt -lboost_thread-mt -lboost_system-mt -lnddsc -lnddscore -lnddscpp -lrpcdds $(SYSLIBS_x64Linux2.6gcc4.5.1)

COMMONSOURCES = ../../common/rpcdds/SimpleDelayRequestReply.cxx ../../common/rpcdds/SimpleDelay.cxx ../../common/rpcdds/SimpleDelayRequestReplyPlugin.cxx \
                ../../common/rpcdds/SimpleDelayPlugin.cxx ../../common/rpcdds/SimpleDelayRequestReplySupport.cxx ../../common/rpcdds/SimpleDelaySupport.cxx \
                ../../common/rpcdds/MessageHeader.cxx ../../common/rpcdds/MessageHeaderPlugin.cxx ../../common/rpcdds/MessageHeaderSupport.cxx

COMMON_SOURCES_DIRS_AUX= $(foreach srcdir, $(dir $(COMMONSOURCES)), $(srcdir))
COMMON_SOURCES_DIRS= $(shell echo $(COMMON_SOURCES_DIRS_AUX) | tr " " "\n" | sort | uniq | tr "\n" " ")
SERVERSOURCES = SimpleDelayRequestReply_subscriber.cxx
DIRECTORIES   = objs.dir objs/x64Linux2.6gcc4.5.1.dir
COMMONOBJS    = $(foreach obj,$(notdir $(addsuffix .o, $(basename $(COMMONSOURCES)))), objs/x64Linux2.6gcc4.5.1/$(obj))
SERVEROBJS    = $(SERVERSOURCES:%.cxx=objs/x64Linux2.6gcc4.5.1/%.o)
SERVEREXEC    = objs/x64Linux2.6gcc4.5.1/SimpleDelayServer

server: $(DIRECTORIES) $(COMMONOBJS) $(SERVEREXEC)

$(SERVEREXEC) : $(SERVEROBJS)
	$(LD_x64Linux2.6gcc4.5.1) $(LDFLAGS_x64Linux2.6gcc4.5.1)  -o $(@:%.out=%) $(COMMONOBJS) $(SERVEROBJS) $(LIBS)

vpath %.cxx $(COMMON_SOURCES_DIRS)

objs/x64Linux2.6gcc4.5.1/%.o : %.cxx
	$(CPP_x64Linux2.6gcc4.5.1) $(CXXFLAGS_x64Linux2.6gcc4.5.1)  -o $@ $(DEFINES) $(INCLUDES) -c $<
	
objs/x64Linux2.6gcc4.5.1/%.o : %.cpp
	$(CPP_x64Linux2.6gcc4.5.1) $(CXXFLAGS_x64Linux2.6gcc4.5.1)  -o $@ $(DEFINES) $(INCLUDES) -c $<

# Here is how we create those subdirectories automatically.
%.dir : 
	@echo "Checking directory $*"
	@if [ ! -d $* ]; then \
		echo "Making directory $*"; \
		mkdir -p $* ; \
	fi;
