/**
 * clientRemoteServiceHeader: Internal Template

 * Params:
 *   name     :function name 
 *
 * Uses:
 */ 
clientRemoteServiceHeader(name) ::= <<

GENERIC_CLIENT_REMOTE_SERVICE($name$ClientRemoteService, $name$RequestDataWriter, $name$ReplyDataReader);

>>

/**
 * clientRemoteServiceImpl: Internal Template
 * 
 * Params:
 *   name     :function name 
 *
 * Uses:
 */ 
clientRemoteServiceImpl(name) ::= <<

/* Defines */
#define TName            $name$ClientRemoteService
#define TDataTypeSupport $name$ReplyTypeSupport
#define TData            $name$
#define TDataSeq         $name$ReplySeq
#define TDataReader      $name$ReplyDataReader
#define TDataWriter      $name$RequestDataWriter


#include "utils/GenericClientRemoteService.gen"


#undef TName
#undef TDataTypeSupport
#undef TData
#undef TDataSeq
#undef TDataReader
#undef TDataWriter

>>